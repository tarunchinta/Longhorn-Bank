@model fa22_finalproject_32.Models.Account

@{
    ViewData["Title"] = "Details";
}

<h1>Account Details</h1>

<div>
    <h4>Account</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Balance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Balance)
        </dd>
    </dl>
</div>

<h5>Transactions on this Account</h5>
<table class="table table-primary">
    <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Amount</th>
    </tr>
    @foreach (Transaction rd in Model.Transactions)
    {
        <tr>
            <td>@Html.DisplayFor(ModelItem => rd.DisputeDate)</td>
            <td>@Html.DisplayFor(ModelItem => rd.TransactionType)</td>
            <td>@Html.DisplayFor(ModelItem => rd.Amount)</td>
            <td><a asp-action="Details" asp-route-id="@rd.TransactionID">Details</a></td>
        </tr>
    }
</table>



<div>
    <a asp-action="Index">Back to List</a>
</div>
